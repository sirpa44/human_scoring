<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
    <div class="container-fluid bg-primary">
        <div class="row">
            <div class="col-md-1 ">
                <img src="{{ asset('images/tao.svg') }}" alt="Logo" class="img-rounded img-responsive" style="padding: 15px">
            </div>
            {% if app.user %}
                <div class="col-md-1 pull-right">
                    <a class="btn btn-primary btn-lg" style="margin-top: 27px" href="{{ path('app_logout') }}">LOG OUT</a>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="container">
        <div class="row">
            {% block body %}{% endblock %}
        </div>
    </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
